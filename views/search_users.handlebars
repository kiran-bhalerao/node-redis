<div class="jumbotron mt-4">
  <div class="row d-flex justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center">Search Users</h1>
      <form action="/users/search" method="POST" class="mt-5">
        <div class="form-group">
          <label for="uername">Username</label>
          <input type="text" class="form-control" name="id" placeholder="Search user">
        </div>
        <input type="submit" value="Search" class="btn btn-warning btn-block">
        {{#if error}}
        <p class="text-danger mt-3 text-center">{{error}}</p>
        {{/if}}
      </form>
    </div>
  </div>
</div>